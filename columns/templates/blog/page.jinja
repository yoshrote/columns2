<meta name="DC.title" content="{{ app_settings('site_name') }} - {{ page.title }}" />
<meta name="title" content="{{ app_settings('site_name') }} - {{ page.title }}"/>
<meta name="description" content="{{ app_settings('site_description') }}"/>
